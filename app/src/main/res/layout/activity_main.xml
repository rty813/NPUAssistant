<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.npu.zhang.npuassistant.MainActivity">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/login_banner"
        android:adjustViewBounds="true"
        android:src="@drawable/login_banner"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/login_usr_in_img"
        android:hint="用户名"
        android:drawablePadding="10dp"
        android:id="@+id/et_username"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/login_code_in_img"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:hint="密码"
        android:id="@+id/et_password"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="验证码"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/login_confirm"
            android:drawablePadding="10dp"
            android:id="@+id/et_imagecode"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/imageview"
            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:background="@drawable/shape_corner"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="登录"
        android:id="@+id/btn_login"/>
</LinearLayout>
